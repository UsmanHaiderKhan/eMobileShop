@using SirAliClass.Models
@model EVSFinalProjectClasses.ProductMgmt.Mobile

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    AlertMessage msg = (AlertMessage)TempData["Message"];
}
<style type="text/css">
    .mytabpane {
        padding: 10px;
        border-left: solid 3px #e4e4e4;
        border-right: solid 3px #e4e4e4;
        border-bottom: solid 3px #e4e4e4;
    }
</style>
@if (msg != null)
{
    <div class="alert alert-dismissible @msg.CSSClass" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <strong>@msg.Heading!</strong> @msg.Content.
    </div>
}
<div style="margin-right: 5%">
    @using (Html.BeginForm("Create", "Product", FormMethod.Post, new { id = "prodForm", enctype = "multipart/form-data" }))
    {
        <ul class="nav nav-tabs">
            <li class="active"><a href="#generalTab" data-toggle="tab">General</a></li>
            <li><a href="#specificTab" data-toggle="tab">Specific</a></li>
            <li><a href="#descriptionlTab" data-toggle="tab">Decription</a></li>
            <li><a href="#imagesTab" data-toggle="tab">Images</a></li>

        </ul>
        <div class="tab-content">
            <div id="generalTab" class="mytabpane tab-pane active mytab">
                <div class="form-group">
                    <label for="name">Name:</label>
                    @Html.TextBox("name", null, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="price">Price:</label>
                    @Html.TextBox("price", null, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="os">Operating System:</label>
                    <div class="form-inline">
                        <div style="float: left; padding-right: 5px">
                            @Html.DropDownList("os", (IEnumerable<SelectListItem>)ViewBag.OSList, "- Operting System -", new { @class = "form-control" })
                        </div>
                        <div id="osvdiv" style="float: left;">
                        </div>
                        <div style="clear: both"></div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="ReleaseDate">Release Date:</label>
                    @Html.TextBox("ReleaseDate", null, new { @class = "form-control", type = "date" })
                </div>
                <div class="form-group">
                    @foreach (var b in (IEnumerable<SelectListItem>)ViewBag.BrandsList)
                    {
                        <label>@Html.RadioButton("brand", b.Value) @b.Text</label>
                    }
                </div>
                <div class="form-group">
                    <label>@Html.CheckBox("wifi", "wifi") Wifi</label>
                    <label>@Html.CheckBox("bluetooth", "bluetooth") BlueTooth</label>
                    <label>@Html.CheckBox("3g", "3g") 3G</label>
                    <label>@Html.CheckBox("4g", "4g") 4G</label>
                </div>
            </div>
            <div id="specificTab" class="row mytabpane tab-pane mytab">
                <div class="col-lg-6">
                    <div class="form-group">
                        <div class="cols-sm-10">
                            @Html.LabelFor(m => m.Color)
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-mobile-alt fa-lg" style="color: crimson" aria-hidden="true"></i></span>
                                @Html.TextBoxFor(m => m.Color, new { @class = "form-control", placeholder = "Mobile Color " })

                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="cols-sm-10">
                            @Html.LabelFor(m => m.Warranty)
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-file-alt fa-lg" aria-hidden="true"></i></span>
                                @Html.TextBoxFor(m => m.Warranty, new { @class = "form-control", placeholder = "Mobile Warranty 2/3/2018", type = "date" })

                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="cols-sm-10">
                            @Html.LabelFor(m => m.Features)
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-eye fa-lg" aria-hidden="true"></i></span>
                                @Html.TextBoxFor(m => m.Features, new { @class = "form-control", placeholder = "Mobile Features" })

                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="cols-sm-10">
                            @Html.LabelFor(m => m.Ram)
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-ram fa-lg" aria-hidden="true"></i></span>
                                @Html.TextBoxFor(m => m.Ram, new { @class = "form-control", placeholder = "Mobile Ram Size" })

                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <div class="cols-sm-10">
                            @Html.LabelFor(m => m.FrontCam)
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-camera-retro fa-lg" aria-hidden="true"></i></span>
                                @Html.TextBoxFor(m => m.FrontCam, new { @class = "form-control", placeholder = "Front Camra Pixel" })

                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="cols-sm-10">
                            @Html.LabelFor(m => m.BackCam)
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-camera fa-lg" aria-hidden="true"></i></span>
                                @Html.TextBoxFor(m => m.BackCam, new { @class = "form-control", placeholder = "Front Camra Pixel" })

                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="cols-sm-10">
                            @Html.LabelFor(m => m.ScreenSize)
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-tv fa-lg" aria-hidden="true"></i></span>
                                @Html.TextBoxFor(m => m.ScreenSize, new { @class = "form-control", placeholder = "Front Camra Pixel" })

                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="cols-sm-10">
                            @Html.LabelFor(m => m.Battery)
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-battery-half fa-lg" aria-hidden="true"></i></span>
                                @Html.TextBoxFor(m => m.Battery, new { @class = "form-control", placeholder = "Front Camra Pixel" })

                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <div class="cols-sm-10">
                            @Html.LabelFor(m => m.Stock)
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-star fa-lg" aria-hidden="true"></i></span>
                                @Html.TextBoxFor(m => m.Stock, new { @class = "form-control", placeholder = "Front Camra Pixel" })
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        @Html.TextAreaFor(m => m.Accessories, new { @class = "form-control", rows = "8", @style = "resize: none" })
                    </div>
                </div>
            </div>
            <div id="descriptionlTab" class="mytabpane tab-pane mytab">
                @Html.TextArea("description", null, new { rows = "17", @class = "form-control", @style = "resize: none" })
            </div>
            <div id="imagesTab" class="mytabpane tab-pane mytab">
                <input id="image1" name="image1" type="file" />
                <input id="image2" name="image2" type="file" />
                <input id="image3" name="image3" type="file" />
                <input id="image4" name="image4" type="file" />
            </div>
        </div>
        <div style="margin-top: 10px">
            <button type="submit" class="btn btn-primary" id="prodForm"><span class="fa fa-save"></span>&nbsp; Save</button>
            <button type="reset" class="btn btn-default" id="prodForm"><span class="fa fa-times"></span>&nbsp;Cancle</button>
        </div>
    }
</div>

@section myscript{

    <script type="text/javascript">
        $("#os").change(function () {

            var osid = $(this).select("option:selected").val();
            $.ajax(
                {
                    url: "/Product/OsVersions/" + osid,
                    type: "get",
                    success: function (result) {
                        $("#osvdiv").html(result);
                    }
                }
            );

        });

    </script>
}
