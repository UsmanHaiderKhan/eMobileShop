@model EVSFinalProject.Models.Email

@{
    ViewBag.Title = "PasswordRecovery";
    Layout = null;
}
<link href="~/Content/assets/css/vendor/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/Login.css" rel="stylesheet" />
@using (Html.BeginForm("passwordrecovery", "Users", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="container">
        <h2 class="mt-5 text-center">Recover Your Password</h2>
        <div class="row mt-5 justify-content-center">
            <div class="col-lg-6 container-border">
                @Html.LabelFor(m => m.email)
                @Html.TextBoxFor(m => m.email, null, new { @class = "form-control ", placeholder = "Enter Your Recovery Email" })
                @Html.ValidationMessageFor(m => m.email, null, new { @class = "text-danger" })

                <br />
                @if (ViewBag.Error != null)
                {
                    <a class="btn btn-danger" href="@Url.Action("PasswordRecovery")"><span class="fa fa-sync fa-2x fa-spin"></span> RETRY</a>
                    <hr />
                    <div class="alert alert-danger">@ViewBag.Error</div>
                }
                else if (ViewBag.Success != null)
                {
                    <a class="btn btn-success" href="@Url.Action("Login")">Goto Login page</a>
                    <hr />
                    <div class="alert alert-success">@ViewBag.Success</div>
                }
                else
                {
                    <button class="btn btn-outline-success" type="submit">Send Mail</button>
                }
            </div>
        </div>
    </div>

}