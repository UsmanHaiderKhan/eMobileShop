<div>
    <div style="margin-top: 4%;">
        <div id="carousel-id" class="carousel slide thumbnail" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carousel-id" data-slide-to="0" class=""></li>
                <li data-target="#carousel-id" data-slide-to="1" class=""></li>
                <li data-target="#carousel-id" data-slide-to="2" class=""></li>
                <li data-target="#carousel-id" data-slide-to="3" class=""></li>
                <li data-target="#carousel-id" data-slide-to="4" class="active"></li>
            </ol>
            <div class="carousel-inner bounceInUp">
                @foreach (var v in Model)
                {
                    <div class="item">
                        <img src="@Url.Content(v.BrandImage)" alt="@v.Title" style="width: 100%; height: 400px" />
                        <div class="container ">
                            <div class="carousel-caption ">
                                <h1>@v.Title</h1>
                                <p style="color: aliceblue">@v.Description</p>
                            </div>
                        </div>
                    </div>
                }
                @{ var First = Model.First(); }
                <div class="item active">
                    <img src="@Url.Content(First.BrandImage)" alt="@First.Title" style="width: 100%; height: 400px" />
                    <div class="container">
                        <div class="carousel-caption">
                            <h1>@First.Title</h1>
                            <p><a>@First.Description</a></p>
                        </div>
                    </div>
                </div>
            </div>
            <a class="left carousel-control" href="#carousel-id" data-slide="prev"><span class="glyphicon glyphicon-chevron-left"></span></a>
            <a class="right carousel-control" href="#carousel-id" data-slide="next"><span class="glyphicon glyphicon-chevron-right"></span></a>
        </div>
    </div>
</div>
