@model IEnumerable<EVSFinalProjectClasses.UserManagment.Country>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Countries</h2>

<p>
    @Html.ActionLink("Add New", "AddCountry")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.ActionLink("Delete", "DeleteCountry", new { id = item.Id }) |
                @Html.ActionLink("Cities", "Cities", new { id = item.Id })
            </td>
        </tr>
    }


</table>
