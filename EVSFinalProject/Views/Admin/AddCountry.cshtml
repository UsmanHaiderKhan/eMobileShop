@model EVSFinalProjectClasses.UserManagment.Country
@{
    ViewBag.Title = "AddCountry";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .container-bordermick {
        border: solid 1px #fff5ee;
        padding: 30px 50px;
        margin-top: 0vh;
        -webkit-box-shadow: 2px 1px 25px 3px rgba(0,0,0,0.75);
        -moz-box-shadow: 2px 1px 25px 3px rgba(0,0,0,0.75);
        box-shadow: 2px 1px 25px 3px rgba(0,0,0,0.75);
    }
</style>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="">
        <div class="form-horizontal col-lg-offset-2 ">




            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="col-lg-8 container-bordermick">
                <h3>Add Country</h3>
                <div class="form-group">
                    @Html.LabelFor(m => m.Name)
                    @Html.TextBoxFor(m => m.Name, new { placeholder = "Add Country", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Code)
                    @Html.TextBoxFor(m => m.Code, new { placeholder = "Add Country Code", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
                <div class="form-group">
                    @Html.ActionLink("Back to List", "Index")
                </div>
            </div>

        </div>
    </div>

}



