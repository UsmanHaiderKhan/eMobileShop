@model EVSFinalProjectClasses.UserManagment.User
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">ChangePassword</h2>
@using (Html.BeginForm("changepassword", "Contact", new { id = ViewBag.userId }, FormMethod.Post, new { enctype = "plain-text" }))
{
    <div class="container-border col-lg-6 offset-lg-3 mt-5">

        <div class="form-group">
            @Html.TextBoxFor(m => m.Password, null, new { @class = "form-control", placeholder = "Enter Your New Password" })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(m => m.ConfirmPassword, null, new { @class = "form-control", placeholder = "Confirm Your Entered Password" })
        </div>
        <button type="submit" class="btn btn-success">Update Password</button>
    </div>
}



